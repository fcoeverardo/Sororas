<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:id="@+id/item">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/perfil_photo3"
            app:layout_constraintEnd_toEndOf="@+id/perfil_photo3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/perfil_photo3"
            app:srcCompat="@drawable/ic_user" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/perfil_photo3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_account"
            android:visibility="invisible"
            app:civ_border_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/perfil_photo3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/perfil_photo3"
            app:layout_constraintTop_toTopOf="@+id/perfil_photo3">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="ServiÃ§o"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/perfil_photo3"
                app:layout_constraintStart_toEndOf="@+id/perfil_photo3"
                app:layout_constraintTop_toTopOf="@+id/perfil_photo3" />

            <TextView
                android:id="@+id/lastmensage"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:fontFamily="@font/roboto_light"
                android:text="As Muito bom. Top. Adorei"
                android:textColor="@color/textoCinza"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/perfil_photo3"
                app:layout_constraintTop_toBottomOf="@+id/title" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frameLayout3"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="8dp"
            android:alpha="0.5"
            android:background="@color/cinza"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/perfil_photo3">

        </FrameLayout>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>




