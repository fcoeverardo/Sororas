<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorPrimaryDark">
    <item android:id="@android:id/mask" android:left="-1dp" android:right="-1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/cinzaLight" />
            <stroke android:width="1dp"
                android:color="#ADADAD"
                android:alpha="0.5"
                ></stroke>
        </shape>
    </item>

    <item android:id="@android:id/background" android:left="-1dp" android:right="-1dp">
        <shape android:shape="rectangle">
            <solid android:color="#fff"></solid>
            <stroke android:width="1dp"
                android:color="#ADADAD"
                android:alpha="0.5"
                ></stroke>
        </shape>
    </item>
</ripple>